generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model FormSubmission {
  id           Int       @id @default(autoincrement())
  name         String
  role         String
  email        String
  mobile       String
  status       Status    @default(processing)
  submissionServices SubmissionService[]
  eventDates   String
  weddingOf    String
  venues       String
  heardFrom    String
  dreams       String
  budget       String
  coverage     String
  createdAt    DateTime  @default(now())
}

model Service {
  id           Int       @id @default(autoincrement())
  name         String    @unique
  submissionServices SubmissionService[]
}

model SubmissionService {
  formSubmissionId Int
  serviceId        Int
  formSubmission   FormSubmission @relation(fields: [formSubmissionId], references: [id], onDelete: Cascade)
  service          Service        @relation(fields: [serviceId], references: [id], onDelete: Cascade)
  @@id([formSubmissionId, serviceId])
}

enum Status {
  ongoing
  processing
  done
}






